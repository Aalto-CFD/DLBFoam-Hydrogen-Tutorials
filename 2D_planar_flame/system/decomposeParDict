FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    note            "mesh decomposition control dictionary";
    object          decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 256;

method          multiLevel;

simpleCoeffs
{
    n               ( $numberOfSubdomains 1 1 );
    delta           1e-10;
}

multiLevelCoeffs
{
    nodes
    {
        numberOfSubdomains 2;
        method          simple;
        n               ( 1 2 1 );
        delta           1e-10;
    }
    cpus
    {
        numberOfSubdomains 128;
        method          simple;
        n               ( 8 16 1 );
        delta           1e-10;
    }
}


