FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            heatSource;

    selectionMode   cellSet;
    cellSet         ignitionCells;

    q
    {
        type        scale;
        scale       squarePulse;
        start       0.001;
        duration    1e-04;
        value       1e+10;
    }
}

