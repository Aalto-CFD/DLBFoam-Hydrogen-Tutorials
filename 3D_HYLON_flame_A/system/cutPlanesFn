#includeEtc "caseDicts/postProcessing/surface/surface.cfg"

writeControl    adjustableRunTime;
writeInterval   0.001;
writeFormat     binary;

fields
(
    U p T UMean H2 Qdot OH H2O NO
);

cutPlaneSurface
{
    type        cuttingPlane;
    planeType   pointAndNormal;
    interpolate false;
}

surfaces
(
    #codeStream
    {
        codeInclude #{ #include "vector.H" #};
        code
        #{
            List<scalar> coords(-5.0e-03 -2.5e-03 +2.5e-03 +5.0e-03);
            forAll(coords, coordI)
            {
                const scalar& x = coords[coordI];
                os << "cutPlane(x," << 1e+3*x << "mm) {"
                   << "type        cuttingPlane;"
                   << "planeType   pointAndNormal;"
                   << "interpolate false;"
                   << "point" << vector(x, 0, 0)
                   << "normal" << vector(1, 0, 0)
                   << "}";
            }
        #};
    }

    cutPlane(x) { $cutPlaneSurface; point (0 0 0); normal  (1 0 0); }
    cutPlane(y) { $cutPlaneSurface; point (0 0 0); normal  (0 1 0); }
    cutPlane(z) { $cutPlaneSurface; point (0 0 0); normal  (0 0 1); }
);


// ************************************************************************* //
